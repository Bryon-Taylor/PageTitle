<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Page Title Extractor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css"
  </head>
  <body>
    <div class="title-bar"><h1>Page Title Extractor</h1></div>
    <div class="container">
      <div class="row">
        <div class="col">
          <form action="/" method="post">
            <label for="inputUrl">Input a URL to view the website's title</label><br />
            <input type="text" id="inputUrl" name="inputUrl" /><br />
            <button class="buttn" type="submit">Submit URL</button>
          </form>
        </div>
        <div class="col">
          <h3><%= url %></h3>
          <h3><%= title %></h3>
        </div>
      </div>
      <div class="history">
        <h1>Your history</h1>
        <% urls.forEach(function(entry) { %>
          <p><%= entry.url %></p>
          <p><%= entry.title %></p>
        <% }); %>
      </div>
    </div>

  </body>
</html>
